{
    "repo": "github.com/firstcontributions/backend",
    "defaults": {
        "viewer_type": "user"
    },
    "high_level_queries": [
        {
            "name": "feeds",
            "type" :"list",
            "paginated": true,
            "schema" : "story"
        },
        {
            "name": "user",
            "type" :"object",
            "schema" : "user"
        }
    ],
    "modules": [
        {
            "name": "users",
            "data_source": "mongo",
            "db": "mongo",
            "entities": {
                "user":{
                    "name": "user",
                    "type": "object",
                    "meta": {
                        "search_fields": ["name", "handle"],
                        "filters": ["handle"],
                        "mutatable_fields" :["name", "cursor_checkpoints", "token", "tags", "reputation", "git_contribution_stats", "bio", "avatar"],
                        "graphql_ops": "CRUD"
                    },
                    "properties":{
                        "id": "id",
                        "name": "string",
                        "handle": "string",
                        "avatar": "string",
                        "bio": "string",
                        "badges": {
                            "type": "list",
                            "schema": "badge",
                            "joined_data": true,
                            "paginated": true
                        },
                        "token":{
                            "type": "object",
                            "schema": "token"

                        },
                        "cursor_checkpoints": {
                            "type": "object",
                            "schema": "cursor_checkpoints"
                        },
                        "tags" : {
                            "type": "object",
                            "schema": "tags"
                        },
                        "reputation" : {
                            "type": "object",
                            "schema": "reputation"
                        },
                        "git_contribution_stats": {
                            "type": "object",
                            "schema": "git_contribution_stats"
                        },
                        "stories" : {
                            "type": "list",
                            "schema": "story",
                            "joined_data": true,
                            "paginated": true
                        },
                        "issues_from_last_repo" : {
                            "type": "list",
                            "schema": "issue",
                            "joined_data": true,
                            "paginated": true,
                            "hardcoded_filters" : {
                                "issue_type": "last_repo_issues"
                            }
                        },
                        "issues_from_other_recent_repos" : {
                            "type": "list",
                            "schema": "issue",
                            "joined_data": true,
                            "paginated": true,
                            "hardcoded_filters" : {
                                "issue_type": "issues_from_other_recent_repos"
                            }
                        },
                        "relevant_issues" : {
                            "type": "list",
                            "schema": "issue",
                            "joined_data": true,
                            "paginated": true,
                            "hardcoded_filters" : {
                                "issue_type": "relevant_issues"
                            }
                        }
                    }
                },
                "token" : {
                    "name": "token",
                    "type": "object",
                    "no_graphql": true,
                    "properties": {
                        "access_token": "string",
                        "refresh_token": "string",
                        "token_type": "string",
                        "expiry": "time"
                    }
                },
                "badge" : {
                    "name": "badge",
                    "type": "object",
                    "meta": {
                        "mutatable_fields" :["points", "current_level", "progress_percentage_to_next_level", "lines_of_code_to_next_level"],
                        "sort_by": ["points"]
                    },
                    "properties":{
                        "id": "id",
                        "display_name": "string",
                        "points": "int",
                        "current_level" : "int",
                        "progress_percentage_to_next_level" : "int",
                        "lines_of_code_to_next_level" : "int"
                    }
                },
                "cursor_checkpoints" : {
                    "name": "cursor_checkpoints",
                    "type": "object",
                    "no_graphql": true,
                    "properties": {
                        "pull_requests": "string"
                    }
                },
                "tags" : {
                    "name": "tags",
                    "type": "object",
                    "no_graphql": true,
                    "properties": {
                        "topics": {"type": "list", "schema": "string"},
                        "recent_repos": {"type": "list", "schema": "string"},
                        "languages": {"type": "list", "schema": "string"}
                    }
                },
                "reputation": {
                    "name": "reputation",
                    "type": "object",
                    "meta": {
                        "mutatable_fields" :["contributions_to_popular_repos", "contributions_to_popular_repos", "value"]
                    },
                    "properties": {
                        "value": "float",
                        "contributions_to_popular_repos": {
                            "type": "int",
                            "no_graphql": true
                        },
                        "contributions_to_unpopular_repos": {
                            "type": "int",
                            "no_graphql": true
                        }
                    }
                },
                "git_contribution_stats": {
                    "name": "git_contribution_stats",
                    "type": "object",
                    "meta": {
                        "mutatable_fields" :["pull_requests", "issues"]
                    },
                    "properties": {
                        "pull_requests": "int",
                        "issues": "int"
                    }
                }
        
            }
        },
        {
            "name":"issues",
            "data_source": "external_apis",
            "entities":{
                "issue" : {
                    "name": "issue",
                    "type": "object",
                    "meta": {
                        "filters": ["issue_type"],
                        "graphql_ops": "R",
                        "sort_by": ["repository_updated_at"]
                    },
                    "properties":{
                        "id": "id",
                        "title": "string",
                        "body": "string",
                        "repository": "string",
                        "repository_avatar": "string",
                        "repository_updated_at": "time",
                        "comment_count": "int",
                        "labels": {
                            "type": "list",
                            "schema": "string"
                        },
                        "url": "string",
                        "issue_type": "string"
                    }
                }
            }
        },
        {
            "name": "stories",
            "data_source": "mongo",
            "db": "mongo",
            "entities": {
                "story": {
                    "name": "story",
                    "type": "object",
                    "meta": {
                        "search_fields": [],
                        "filters": [],
                        "mutatable_fields" :["title", "content_json", "abstract_content", "thumbnail", "repos", "languages"],
                        "graphql_ops": "CRUD",
                        "viewer_reference_field": "created_by"
                    },
                    "properties":{
                        "id": "id",
                        "title": "string",
                        "content_json": "string",
                        "abstract_content": "string",
                        "url_suffix": "string",
                        "thumbnail": "string",
                        "repos": {"type": "list", "schema": "string"},
                        "languages": {"type": "list", "schema": "string"},
                        "comments": {
                            "type": "list",
                            "schema": "comment",
                            "joined_data": true,
                            "paginated": true
                        },
                        "reactions":{
                            "type": "list",
                            "schema": "reaction",
                            "joined_data": true,
                            "paginated": true
                        },
                        "issues_from_repos" : {
                            "type": "list",
                            "schema": "issue",
                            "joined_data": true,
                            "paginated": true,
                            "hardcoded_filters" : {
                                "issue_type": "issues_from_repo_story"
                            }
                        },
                        "relevant_issues" : {
                            "type": "list",
                            "schema": "issue",
                            "joined_data": true,
                            "paginated": true,
                            "hardcoded_filters" : {
                                "issue_type": "relevant_issues_story"
                            }
                        },
                        "created_by" : {
                            "type": "object",
                            "schema": "user",
                            "joined_data": true
                        }
                    }
                },
                "comment": {
                    "name": "comment",
                    "type": "object",
                    "meta": {
                        "search_fields": [],
                        "filters": [],
                        "mutatable_fields" :[],
                        "graphql_ops": "CRUD",
                        "viewer_reference_field": "created_by"
                    },
                    "properties":{
                        "id": "id",
                        "content_json": "string",
                        "abstract_content": "string",
                        "created_by" : {
                            "type": "object",
                            "schema": "user",
                            "joined_data": true
                        }
                    }
                },
                "reaction": {
                    "name": "reaction",
                    "type": "object",
                    "meta": {
                        "search_fields": [],
                        "filters": [],
                        "mutatable_fields" :[],
                        "graphql_ops": "CRUD",
                        "viewer_reference_field": "created_by"
                    },
                    "properties":{
                        "id": "id",
                        "created_by" : {
                            "type": "object",
                            "schema": "user",
                            "joined_data": true
                        }
                    }
                }
            }
        }
    ]
}